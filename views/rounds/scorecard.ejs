<%- include('../partials/header') %>  

  <h1 class="text-center"><%= event.courseName %></h1>
  <h3 class="text-center"><%= event.date.toLocaleDateString() %></h3>
  <form action='/users/<%= user._id %>/events/<%= event._id %>/rounds/<%= round._id %>?_method=PUT' method="POST">
    <div class="container text-center">
      <table id="big-scorecard">
        <tr>
          <th>Hole</th>
          <th>Par</th>
          <th>Score</th>
          <th>Hole</th>
          <th>Par</th>
          <th>Score</th>
        </tr>
        <% for (let i = 0; i < 9; i ++) { %>
          <tr>
            <td><%= i + 1 %></td>
            <td><%= event.coursePars[i] %></td>
            <td><input tabindex=<%= i + 1 %> style="<%= (round.scores[i]) ? 'background-color:lightgreen' : '' %>" type="number" name=<%= `score${i}` %> value=<%= round.scores[i] %>></td>
            <td><%= i + 9 %></td>
            <td><%= event.coursePars[i + 9] %></td>
            <td><input tabindex=<%= i + 10 %> style='<%= (round.scores[i + 9]) ? 'background-color:lightgreen' : '' %>' type="number" name=<%= `score${i + 9}` %> value=<%= round.scores[i + 9] %>></td>
          </tr>
        <% } %>
      </table>
      <button id="big-scoreboard-btn" tabindex=18 class="btn btn-success d-inline-block" type="submit">Save</button>
    </div>
  </form>
</body>
</html>
